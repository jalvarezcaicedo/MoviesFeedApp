<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/bg_light"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_info"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/desc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/poster_info" />

            <TextView
                android:id="@+id/votecount_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc_info"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/poster_info" />

            <TextView
                android:id="@+id/isadult_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/votecount_info"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/poster_info" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>